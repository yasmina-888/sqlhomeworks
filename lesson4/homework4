  ----1----
  select top 5* from  employee

 drop table products

 


  CREATE TABLE products (
    product_id INT PRIMARY KEY,
    name VARCHAR(100) UNIQUE,
    category VARCHAR(50),
    price DECIMAL(10, 2))


INSERT INTO products (product_id, name, category, price) VALUES
